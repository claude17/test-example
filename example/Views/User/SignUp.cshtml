@using WebAppCRUDEF.Context 
@model WebAppCRUDEF.Context.User

@{
    ViewBag.Title = "SignUp";
}

<style>
    .rederr {
        color: red;
        font-size: xx-small;
    }
</style>

<h2>SignUp</h2>

<hr />

@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(x => x.Username)
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Username, "", new { @class = "rederr" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "rederr" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.RePassword)
            @Html.EditorFor(x => x.RePassword, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.RePassword, "", new { @class = "rederr" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Type)
            @*@Html.EditorFor(x => x.Type, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.DropDownListFor(x => x.Type, new SelectList(Enum.GetValues(typeof(UserType))), "--Select--", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Type, "", new { @class = "rederr" })
        </div>
        <div class="form-group">
            <input id="btnSignUp" type="submit" value="Sign Up" class="btn btn-primary" />
            <a href="@Url.Action("ClearSignUp")" class="btn btn-danger">Clear</a>
        </div>
    </div>
}