@using WebAppCRUDEF.Context
@model WebAppCRUDEF.Context.Employee

@{
    ViewBag.Title = "AddEmployee";
}

<style>
    .rederr{
        color:red;
        font-size:xx-small;
    }
</style>

<h2>Save Employee Information</h2>
<hr />

@using (Html.BeginForm("CreateEmployee","Employee",FormMethod.Post))
{
    <div class="container">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "rederr"})
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.JoinDate)
            @if (ViewBag.NoData == 0)
            {
                @Html.EditorFor(x => x.JoinDate, new { htmlAttributes = new { @class = "form-control" } })

            }
            else
            {
                @Html.EditorFor(x => x.JoinDate, new { htmlAttributes = new { @Value = Model.JoinDate.Value.ToString("yyyy-MM-dd"), @class = "form-control" } })

            }
            @Html.ValidationMessageFor(x => x.JoinDate, "", new { @class = "rederr" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "rederr" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Cell)
            @Html.TextBoxFor(x => x.Cell, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Cell, "", new { @class = "rederr" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Salary)
            @Html.TextBoxFor(x => x.Salary, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Salary, "", new { @class = "rederr" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Designation)
            @*@Html.TextBoxFor(x => x.Designation, new { @class = "form-control" })*@
            @Html.DropDownListFor(x => x.Designation, new SelectList(Enum.GetValues(typeof(Ranks))), "--Select--" , new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Designation, "", new { @class = "rederr" })
        </div>
        <div class="form-group">
            <input id="saveBtn" type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}

